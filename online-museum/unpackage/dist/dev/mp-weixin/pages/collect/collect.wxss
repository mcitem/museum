/* 水平间距 */
.col-box {
  display: flex;
  padding: 10px 5px;
  border-bottom: 1px solid #f0f0f0;
  background-color: #fff;
  box-shadow: 0 0 5rpx 0 rgba(0, 0, 0, 0.3);
}
.col-box .img-box {
  margin-right: 10rpx;
  border-radius: 10rpx;
}
.col-box .img-box .img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  display: block;
}
.col-box .info-box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.col-box .info-box .col-origin {
  color: #777;
}

