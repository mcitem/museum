/* 水平间距 */
swiper {
  height: 330rpx;
}
swiper .swiper-item,
swiper .swiper-img {
  height: 100%;
  width: 100%;
}
.nav-list {
  display: flex;
  justify-content: space-around;
  margin: 15px 0;
}
.nav-list .nav-img {
  width: 128rpx;
  height: 140rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10px rgba(138, 44, 45, 0.5);
}
.decoration {
  width: 4px;
  height: 16px;
  margin-right: 4px;
  border-radius: 20%;
  background-color: #8a2c2d;
}
._h3 {
  margin: 0;
  padding: 0;
}
.col-box {
  display: flex;
  padding: 10px 5px;
  border-bottom: 1px solid #f0f0f0;
  background-color: #fff;
  box-shadow: 0 0 5rpx 0 rgba(0, 0, 0, 0.3);
}
.col-box .img-box {
  margin-right: 10rpx;
  border-radius: 10rpx;
}
.col-box .img-box .img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  display: block;
}
.col-box .info-box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.col-box .info-box .col-origin {
  color: #777;
}
.search-box {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 999;
}

