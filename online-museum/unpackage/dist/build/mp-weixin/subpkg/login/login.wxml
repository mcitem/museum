<view><block wx:if="{{!show}}"><view class="login-box"><form><view class="input-box"><view class="text">用户名</view><input class="input" type="text" focus="{{true}}" data-event-opts="{{[['input',[['__set_model',['$0','username','$event',[]],['loginInfo']]]]]}}" value="{{loginInfo.username}}" bindinput="__e"/></view><view class="input-box"><view class="text">密码：</view><input class="input" password="{{true}}" type="password" data-event-opts="{{[['input',[['__set_model',['$0','password','$event',[]],['loginInfo']]]]]}}" value="{{loginInfo.password}}" bindinput="__e"/></view><view class="btn"><button data-event-opts="{{[['tap',[['login',['$event']]]]]}}" style="background-color:#fff;color:#333;" bindtap="__e">登录</button></view></form><view data-event-opts="{{[['tap',[['gotoRegister',['$event']]]]]}}" class="goto" bindtap="__e">没有账号？去注册</view></view></block><block wx:else><view class="login-box"><form><view class="input-box"><view class="text">用户名：</view><input class="input" focus="{{true}}" data-event-opts="{{[['input',[['__set_model',['$0','username','$event',[]],['registerInfo']]]]]}}" value="{{registerInfo.username}}" bindinput="__e"/></view><view class="input-box"><view class="text">密码：</view><input class="input" password="{{true}}" type="password" data-event-opts="{{[['input',[['__set_model',['$0','password','$event',[]],['registerInfo']]]]]}}" value="{{registerInfo.password}}" bindinput="__e"/></view><view class="btn"><button data-event-opts="{{[['tap',[['register',['$event']]]]]}}" style="background-color:#fff;color:#333;" bindtap="__e">注册</button></view></form><view data-event-opts="{{[['tap',[['gotoLogin',['$event']]]]]}}" class="goto" bindtap="__e">返回</view></view></block></view>